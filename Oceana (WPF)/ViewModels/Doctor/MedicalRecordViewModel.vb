Public Class MedicalRecordViewModel

    Inherits PropertyChanged
    Public Property inRecord As PrescriptionDetails

    Public Property Med As String
        Get
            Return inRecord.Nama
        End Get
        Set(value As String)
            inRecord.Nama = value
            OnPropertyChanged(Med)
        End Set
    End Property

    Public Property Desc As String
        Get
            Return inRecord.Description
        End Get
        Set(value As String)
            inRecord.Description = value
            OnPropertyChanged(Desc)
        End Set
    End Property

    Private _Med As String
    Private _Desc As String

End Class
